/* ========================================
   MODAL - DETAIL PAGE
   ======================================== */

.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(4px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  overflow-y: auto;
}

.modal {
  position: relative;
  width: 100%;
  max-width: 1440px;
  max-height: 90vh;
  background: var(--bg-primary);
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

.modal-hero {
  position: relative;
  width: 55%;
  min-height: 600px;
  background: var(--washi);
  overflow: hidden;
}

.modal-hero img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.modal-hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to right,
    rgba(245, 240, 230, 0) 0%,
    rgba(245, 240, 230, 0.3) 50%,
    rgba(245, 240, 230, 0.8) 100%
  );
  pointer-events: none;
}

.modal-hero-content {
  position: absolute;
  bottom: 2rem;
  left: 2rem;
  right: 2rem;
  z-index: 2;
}

.modal-year {
  display: inline-block;
  font-family: var(--font-sans);
  font-size: 0.875rem;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.modal-title {
  font-family: var(--font-serif);
  font-size: 2rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
  line-height: 1.3;
}

/* Text Panel - Figma Design Style */
.modal-text-panel {
  width: 45%;
  background: rgba(245, 240, 230, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  overflow-y: auto;
  position: relative;
}

.modal-text-panel-inner {
  padding: 4rem 2rem;
  max-width: 500px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

/* Section Number */
.modal-section-number {
  display: flex;
  align-items: baseline;
  gap: var(--space-xs);
  margin-bottom: var(--space-xs);
}

.modal-section-number-label {
  font-family: var(--font-serif);
  font-size: 0.875rem;
  color: var(--text-secondary);
  letter-spacing: 0.1em;
}

.modal-section-number-value {
  font-family: var(--font-serif);
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--ai);
  line-height: 1;
}

/* Date Range */
.modal-date-range {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  margin-bottom: var(--space-md);
}

.modal-date-range-inner {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: 4px 7.6px;
  border-radius: 4px;
  width: fit-content;
  font-family: var(--font-sans);
  font-size: 0.875rem;
  color: var(--ai-iro);
}

.modal-date-start,
.modal-date-end {
  font-size: 0.875rem;
  color: var(--ai-iro);
  line-height: 1;
}

.modal-date-separator {
  font-size: 0.875rem;
  color: var(--ai-iro);
  opacity: 0.6;
  line-height: 1;
}

.modal-date-divider {
  width: 109px;
  height: 2px;
  background: var(--ai);
  opacity: 0.3;
}

/* Meta Items - Two Column Layout */
.modal-meta-blur-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-md);
  margin-bottom: var(--space-lg);
}

.modal-meta-blur-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.modal-meta-blur-header {
  display: flex;
  flex-direction: column;
  gap: 4px;
  margin-bottom: var(--space-xs);
}

.modal-meta-blur-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  color: var(--text-secondary);
  font-weight: 500;
  font-family: var(--font-sans);
  line-height: 1.25;
}

.modal-meta-blur-divider {
  width: 100%;
  height: 2px;
  background: var(--ai);
  opacity: 0.2;
}

.modal-meta-blur-text {
  font-size: 16px;
  font-weight: 300;
  color: var(--text-primary);
  line-height: 1.6;
  margin: 0;
  font-family: var(--font-sans);
  padding-left: 0;
}

/* Detail Sections */
.modal-detail-sections {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
  margin-top: var(--space-sm);
}

.modal-detail-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.modal-detail-section-header {
  margin-bottom: 0.5rem;
}

.modal-detail-section-double-lines {
  position: relative;
  width: fit-content;
  border: 0.5px solid var(--sumi-iro);
  padding: 2px;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.modal-detail-section-title-box {
  padding: 8px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.modal-detail-section-title {
  font-family: var(--font-serif);
  font-size: 1rem;
  font-weight: 700;
  color: var(--ai);
  letter-spacing: 0;
  line-height: 1;
  white-space: nowrap;
}

.modal-detail-section-content {
  font-size: 16px;
  color: var(--text-primary);
  line-height: 1.6;
  margin: 0;
  padding-left: 0.75rem;
  font-family: var(--font-sans);
  font-weight: 300;
}

/* Responsive */
@media (max-width: 1024px) {
  .modal {
    flex-direction: column;
    max-height: 95vh;
  }

  .modal-hero {
    width: 100%;
    min-height: 300px;
    max-height: 40vh;
  }

  .modal-text-panel {
    width: 100%;
    max-height: 60vh;
  }

  .modal-text-panel-inner {
    padding: 2rem 1.5rem;
    max-width: 100%;
  }

  .modal-meta-blur-container {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
}

@media (max-width: 768px) {
  .modal-overlay {
    padding: 1rem;
  }

  .modal-text-panel-inner {
    padding: 1.5rem 1rem;
    gap: 1.5rem;
  }

  .modal-section-number-value {
    font-size: 2rem;
  }

  .modal-title {
    font-size: 1.5rem;
  }
}

