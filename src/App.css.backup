}

/* テキストブロック */
.intro-text-block {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  width: 100%;
}

/* 説明文 - Figmaデザインに合わせて */
.intro-description-text {
  font-family: var(--font-sans);
  font-size: 16px;
  font-weight: 300;
  line-height: 1.5;
  letter-spacing: 0;
  color: var(--text-primary);
  margin: 0;
  width: 100%;
}

/* 詳細文 - Figmaデザインに合わせて */
.intro-detail-text {
  font-family: var(--font-sans);
  font-size: 16px;
  font-weight: 300;
  line-height: 1.5;
  letter-spacing: 0;
  color: var(--text-primary);
  margin: 0;
  width: 100%;
}

/* 新しいコンテンツコンテナ - Figmaデザインに合わせて */
.intro-content-new {
  position: relative;
  z-index: 10;
  width: 100%;
  margin: 0 auto;
  padding: 80px 32px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2xl);
  justify-content: flex-start;
  min-height: 100vh;
}

/* テキストコンテンツ - フルワイド、中央揃え */
.intro-text-content {
  width: 100%;
  max-width: 846px; /* 3つのカード(250px × 3) + 2つのgap(48px × 2) = 846px */
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
  align-items: center;
}

/* タイトルと副題のグループ */
.intro-title-group {
  display: flex;
  flex-direction: column;
  gap: 0;
  width: 100%;
}

/* 技法の進化カード - 横並び、幅制限なし */
.intro-evolution-cards {
