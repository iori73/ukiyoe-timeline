/* Detail Section - Old Style (kept for backward compatibility) */
.detail-section-title {
  font-family: var(--font-serif);
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--shu);
  margin: 0;
  padding-left: 0.75rem;
  border-left: 3px solid var(--shu);
  line-height: 1.4;
}

.detail-section-content {
  font-size: 0.9rem;
  color: var(--text-primary);
  line-height: 1.9;
  margin: 0;
  padding-left: 0.75rem;
}

/* Detail Section - Figma Style with Double Lines */
.detail-section-header {
  margin-bottom: 0.5rem;
}

.detail-section-double-lines {
  position: relative;
  width: fit-content;
  border: 0.5px solid var(--sumi-iro);
  padding: 2px;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.detail-section-title-box {
  padding: 8px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.detail-section-double-lines .detail-section-title {
  font-family: var(--font-serif);
  font-size: 1rem;
  font-weight: 700;
  color: var(--ai);
  letter-spacing: 0;
  line-height: 1;
  white-space: nowrap;
}

/* Update detail-section-content for Figma style */
.detail-section .detail-section-content {
  font-size: 16px;
  color: var(--text-primary);
  line-height: 1.6;
  margin: 0;
  padding-left: 0.75rem;
  font-family: var(--font-sans);
  font-weight: 300;
}

/* ========================================
   SCROLL INDICATORS
   ======================================== */

/* Scroll Hint - "scroll → ↓" */
.scroll-hint-indicator {
  position: fixed;
  right: 2rem;
  top: 50%;
  transform: translateY(-50%);
  z-index: 80;
  pointer-events: none;
}

.scroll-hint-content {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  padding: var(--space-sm) var(--space-md);
  background: var(--ai);
  border: none;
  border-radius: 999px;
  color: white;
  font-family: var(--font-sans);
  font-size: 0.875rem;
  letter-spacing: 0.1em;
  text-transform: lowercase;
  box-shadow: 0 4px 16px rgba(30, 58, 95, 0.3);
}

.scroll-arrows {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 1.25rem;
}

.arrow-horizontal {
  display: inline-block;
  animation: pulse-horizontal 2s ease-in-out infinite;
}

.arrow-vertical {
  display: inline-block;
  transform: rotate(90deg);
  opacity: 0.5;
}

@keyframes pulse-horizontal {
  0%, 100% { transform: translateX(0); opacity: 1; }
  50% { transform: translateX(5px); opacity: 0.7; }
}

/* Dot Navigation */
.dot-navigation {
  position: fixed;
  left: 2rem;
  top: 50%;
  transform: translateY(-50%);
  z-index: 90;
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.dot-nav-item {
  position: relative;
  width: 12px;
  height: 12px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dot-inner {
  width: 8px;
  height: 8px;
  background: rgba(245, 240, 230, 0.7);
  border-radius: 50%;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(201, 168, 76, 0.6);
}

.dot-nav-item:hover .dot-inner,
.dot-nav-item.active .dot-inner {
  background: var(--kin-iro);
  transform: scale(1.5);
  box-shadow: 0 0 16px rgba(201, 168, 76, 0.6);
  border-color: var(--kin-iro);
}

.dot-label {
  position: absolute;
  left: 2rem;
  font-size: 0.75rem;
  color: var(--washi);
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
  font-weight: 600;
  white-space: nowrap;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.2s;
}

/* Progress Bar */
.progress-bar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: rgba(255, 255, 255, 0.2);
  z-index: 90;
}

.progress-bar-fill {
  height: 100%;
  /* 
     日本の色彩と浮世絵の進化を表現したグラデーション
     0% - 20%: 墨摺絵 (Sumizuri-e) - 墨色から濃鼠へ
     20% - 45%: 紅摺絵 (Benizuri-e) - 紅色の登場
     45% - 75%: 錦絵 (Nishiki-e) - 藍色の深みと多色刷り
     75% - 100%: 黄金期 - 江戸紫から金色への昇華
  */
  background: linear-gradient(90deg, 
    var(--sumi-iro) 0%, 
    #595857 20%, 
    var(--beni-iro) 45%, 
    var(--ai-iro) 70%, 
    #745399 88%, 
    var(--kin-iro) 100%
  );
  transform-origin: left;
}

/* Section Counter */
.section-counter {
  position: fixed;
  bottom: 2rem;
  left: 2rem;
  z-index: 90;
  display: flex;
  align-items: baseline;
  gap: var(--space-xs);
  font-family: var(--font-serif);
  color: var(--washi);
  font-size: 1.5rem;
  font-weight: 700;
  text-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
}

.counter-divider {
  font-size: 1rem;
  opacity: 0.8;
  color: var(--washi);
  text-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
}

.counter-total {
  font-size: 1.25rem;
  opacity: 0.9;
  color: var(--washi);
  text-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
}

/* Navigation Arrows */
.navigation-arrows {
  position: fixed;
  bottom: 1rem;
  right: 2rem;
  z-index: 90;
  display: flex;
  gap: var(--space-sm);
}

/* 障子効果をナビゲーション矢印ボタンに適用 */
.navigation-arrows .hanko-button.large {
  /* シンプルで視認性の高い和紙風背景 */
  background: rgba(255, 252, 245, 0.5);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  box-shadow: 
    0 2px 8px rgba(0, 0, 0, 0.1),
    inset 0 1px 1px rgba(255, 255, 255, 0.6);
  overflow: visible;
  position: relative;
}

/* 軽量化した和紙テクスチャ - 視認性を優先 */
.navigation-arrows .hanko-button.large::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background-image: 
    radial-gradient(
      circle at 30% 30%,
      rgba(255, 255, 255, 0.3) 0%,
      transparent 60%
    );
  pointer-events: none;
  z-index: 0;
}

/* ボタンのテキストを前面に明確に表示 */
.navigation-arrows .hanko-button.large span {
  position: relative;
  z-index: 2;
  display: inline-block;
  color: var(--sumi-iro);
  font-weight: bold;
}

.navigation-arrows .hanko-button.large:hover {
  background: var(--ai-iro);
  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);
  box-shadow: 
    0 4px 12px rgba(30, 58, 95, 0.25),
    inset 0 1px 2px rgba(255, 255, 255, 0.3);
}

.navigation-arrows .hanko-button.large:hover span {
  color: #FFFFFF;
}

